@using StockCenteral.Helpers
@model Model.ViewModel.Account.AccountViewModel

@{
    Layout = null;
}
@Styles.Render("~/Content/LoginCss")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/Login")
@Scripts.Render("~/bundles/jqueryval")
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>StockCounter登入平台 | 登入</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

</head>
<body class="login-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>StockCounter登錄 </b></a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">請登入帳號資訊</p>
         
         @using (Html.BeginForm("Login", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
         {
            @Html.AntiForgeryToken()
            <div class="form-group has-feedback">
          
                
                @Html.TextBoxFor(m => m.Username , new { @class = "form-control" })
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Username)
            </div>
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                <span class="glyphicon glyphicon-option-horizontal form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
            <div class="row">
                <div class="col-lg-pull-0">
                    <button type="submit" class="btn btn-info btn-block btn-flat">登入</button>
                </div><!-- /.col -->
            </div>
            <br/>
            <div class="row">
                <div class="col-lg-push-0">
                        @Html.ActionLink("註冊","index", "Register", null, new { @class = "btn btn-info btn-block btn-flat" })
                </div><!-- /.col -->
            </div>
         }


        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <div class="bg bg-1"></div>




    <script>
        $(function () {
            $('input').iCheck({
                
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>


