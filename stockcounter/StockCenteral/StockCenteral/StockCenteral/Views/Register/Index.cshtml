@using StockCenteral.Helpers
@model Model.ViewModel.Account.RegisterViewModel

@{
    Layout = null;
}
@Styles.Render("~/Content/LoginCss")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/Login")
@Scripts.Render("~/bundles/jqueryval")


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>StockCounter登入平台 | 註冊</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>

</head>
<body class="register-page">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>StockCounter註冊 </b></a>
        </div><!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">請輸入註冊資訊</p>
         @if (TempData["ErrorMessage"] != null)
         {
             <h3>@TempData["ErrorMessage"]</h3>
         }

         @using (Html.BeginForm("Input", "Register", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
         {
            @Html.AntiForgeryToken()


              <!--帳號-->
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.Account, new { @class = "form-control", placeholder = "請輸入註冊帳號", value = "" })
                <span class="glyphicon glyphicon glyphicon-eye-open form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Account)
            </div>
             <!--註冊密碼-->
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "請輸入註冊密碼", value = "" })
                <span class="glyphicon glyphicon glyphicon-eye-open form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.Password)
            </div>
             <!--確認密碼-->
            <div class="form-group has-feedback">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "確認註冊密碼", value = "" })
                <span class="glyphicon glyphicon glyphicon-eye-open form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>
             <!--使用者姓名-->
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "請輸入註冊者姓名", value = "" })
                <span class="glyphicon glyphicon glyphicon-eye-open form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
             <!--使用者Mail-->
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.UserMail, new { @class = "form-control", placeholder = "請輸入註冊者Mail", value = "" })
                <span class="glyphicon glyphicon glyphicon-eye-open form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.UserMail)
            </div>
             <!--家用電話-->
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.UserPhone, new { @class = "form-control", placeholder = "可填寫家用電話", value = "" })
                <span class="glyphicon form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.UserPhone)
            </div>
             <!--手機電話-->
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.UserCellPhone, new { @class = "form-control", placeholder = "可填寫手機電話", value = "" })
                <span class="glyphicon form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.UserCellPhone)
            </div>
             <!--家裡住址-->
            <div class="form-group has-feedback">
                @Html.TextBoxFor(m => m.UserAddress, new { @class = "form-control", placeholder = "可填寫家裡住址", value = "" })
                <span class="glyphicon form-control-feedback"></span>
                @Html.ValidationMessageFor(m => m.UserAddress)
            </div>

            <div class="row">
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">點我註冊</button>
                </div><!-- /.col -->
            </div>
         }


        </div><!-- /.login-box-body -->
    </div><!-- /.login-box -->
    <div class="bg bg-1"></div>




    <script>
        $(function () {
            $('input').iCheck({
                
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>


